<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/componente_listagem_endereco_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome EndereÃ§o"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"/>


        <TextView
            android:id="@+id/componente_listagem_endereco_rua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rua"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/componente_listagem_endereco_bairro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Bairro"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/componente_listagem_endereco_cidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Cidade"
            android:textSize="20dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentBottom="true">

    </View>

</RelativeLayout>