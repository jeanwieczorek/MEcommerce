<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID:" />

    <EditText
        android:id="@+id/activity_cadastro_enderecos_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rua:" />

    <EditText
        android:id="@+id/activity_cadastro_enderecos_rua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Rua" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nro:" />

    <EditText
        android:id="@+id/activity_cadastro_enderecos_nro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Nro" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bairro:" />

    <EditText
        android:id="@+id/activity_cadastro_enderecos_bairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Bairro" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cidade:" />

    <EditText
        android:id="@+id/activity_cadastro_enderecos_cidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Cidade" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UF:" />

    <EditText
        android:id="@+id/activity_cadastro_enderecos_uf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="UF" />

    <Button
        android:id="@+id/activity_cadastro_enderecos_botao_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="15dp"
        android:background="@android:color/holo_blue_light"
        android:text="SALVAR" />


</LinearLayout>