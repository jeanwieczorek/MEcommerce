<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/componente_listagem_carrinho_imagem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_shopping"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/componente_listagem_carrinho_imagem"/>

        <TextView
            android:id="@+id/componente_listagem_carrinho_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Produto"
            android:textSize="20dp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_toRightOf="@id/componente_listagem_carrinho_imagem"/>


        <TextView
            android:id="@+id/componente_listagem_carrinho_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preco"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/componente_listagem_carrinho_imagem"/>
            />

        <Button
            android:id="@+id/componente_listagem_carrinho_adicionar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_table_row"
            android:layout_alignParentRight="true"
            />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_green_dark"
        android:layout_alignParentBottom="true">

    </View>

</RelativeLayout>





